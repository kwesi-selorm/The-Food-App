<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&family=Varela+Round&display=swap"
      rel="stylesheet"
    />

    <!-- Stylesheets -->
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- Local CSS -->
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <div class="h1-div container-fluid"><h1>The Recipe App</h1></div>

    <div class="container-fluid inputs">
      <form action="/" method="post">
        <!-- Ingredients input -->
        <div class="box col-md">
          <input
            type="text"
            name="ingredients"
            placeholder="Ingredients: Comma-separated, no spaces(e.g., rice,eggs,cauliflower,ham)"
            class="input-box form-control form-control-lg"
            id="ingredients"
          />
        </div>

        <!-- Number of recipes -->
        <div class="box col-md">
          <input
            type="number"
            name="number"
            min="2"
            max="100"
            placeholder="Number of recipes, e.g., 5"
            class="input-box form-control form-control-lg"
          />
        </div>

        <!-- Ranking -->
        <div class="box col-md">
          <select
            class="input-box form-select form-control-lg"
            name="ranking"
            id="ranking"
          >
            <option value="">Select ranking</option>
            <option value="1">Maximise used ingredients first (1)</option>
            <option value="2">Minimise missing ingredients first (2)</option>
          </select>
        </div>

        <!-- Submit button -->
        <button class="btn btn-success btn-lg" type="submit">Submit</button>
      </form>
    </div>

    <!-- CSS animation -->
    <div class="d-flex flex-column justify-content-center w-100 h-100">
      <div
        class="d-flex flex-column justify-content-center align-items-center"
      ></div>
    </div>
  </body>
</html>
